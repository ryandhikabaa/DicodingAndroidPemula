<?xml version="1.0" encoding="utf-8"?>
<!-- list_item_service.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="14dp"
    android:elevation="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Gambar Layanan -->
        <ImageView
            android:id="@+id/tvImage"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:src="@color/colorGreyHalf"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <!-- Nama Layanan -->
            <TextView
                android:id="@+id/tvServiceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <!-- Harga Layanan -->
            <TextView
                android:id="@+id/tvServiceDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummyLongText"
                android:textSize="11sp"
                android:textColor="@color/colorCalmGrey"
                android:ellipsize="end"
                android:maxLines="2"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical"
                android:background="@drawable/rectangle_rounded"
                android:backgroundTint="#E89C1E"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tvServicePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. XX, XXX, XXX, 00"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>